# Environment Configuration for XWP Automation Tests

# Base URL for the application under test
BASE_URL=http://localhost:3000

# API base URL
API_URL=http://localhost:3000/api

# Staging URLs (example)
STAGING_BASE_URL=https://staging.go.ione.nyc
STAGING_LOGIN_URL=https://staging.go.ione.nyc/wp-login.php
STAGING_ADMIN_URL=https://staging.go.ione.nyc/wp-admin
STAGING_API_URL=https://staging.go.ione.nyc/wp-json

# Test configuration
TEST_TIMEOUT=30000
TEST_RETRIES=2
HEADLESS=true

# Browser configuration
BROWSER=chromium
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test data
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
EDITOR_USERNAME=editor
EDITOR_PASSWORD=editor123

# Reporting
REPORT_PATH=./test-results
SCREENSHOT_PATH=./screenshots
VIDEO_PATH=./videos

# Performance & Reliability Settings
# Set to 'true' for detailed diagnostics (slower)
DETAILED_HEALTH_CHECKS=false
VALUE_VERIFICATION=false
PERFORMANCE_MONITORING=true

# CI/CD Configuration
CI=false
NODE_ENV=development

# Database (if needed for test data setup)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=xwp_test
# DB_USER=test_user
# DB_PASSWORD=test_password